{
  "name": "MERN-Web-App",
  "version": "0.1.0",
  "license": "MIT",
  "dependencies": {
    "body-parser": "^1.19.0",
    "concurrently": "^6.0.0",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "mongoose": "^5.12.0"
  },
  "scripts": {
    "client": "cd client && npm start",
    "server": "node server/server.js",
    "start": "concurrently \"npm run server\" \"npm run client\"",
    "configClient": "cd client && npm ci",
    "config": "npm ci && npm run configClient",
    "buildClient": "cd client && npm run build",
    "deploy": "cd client && npm run deploy",
    "heroku-postbuild": "cd client && npm install --only=dev && npm install && npm run build"
  },
  "engines": {
    "node": "14.16.0"
  }
}
